﻿@using Lab5.Models;
@{
    ViewBag.Title = "Planetas";
}

<!DOCTYPE html>
<html>
<body>
    <div>
        <h1>
            Listado de planetas
        </h1>
    </div>

    <div class="seccion_1" id="s1">
        @foreach (var planeta in ViewBag.planetas)
        {
            <hr />
            <h4><strong>Ficha del planeta: </strong>@planeta.id</h4>
            <p>
                Nombre: @planeta.nombre<br />
                Tipo: @planeta.tipo<br />
                Numero de anillos: @planeta.numeroAnillos<br />
            </p>

            @Html.ActionLink("Modificar informacion", "editarPlaneta",
                               new { identificador = planeta.id },
                               new
                               {
                                   @class = "btn btn alert-info",
                                   @onclick = "return confirm ('¿Quiere modificar este planeta?');"
                               })

            @Html.ActionLink("Contenido Digital", "accederArchivo",
                       new { identificador = planeta.id },
                       new { @class = "btn btn alert-info" });
            <hr />
        }
    </div>
</body>
</html>
